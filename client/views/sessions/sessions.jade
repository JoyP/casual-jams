.row
  .col-xs-4
  .col-xs-4
    h3 Sessions
  .col-xs-4

.row
  .col-xs-8
  .col-xs-4
    button.btn.btn-danger.sessions(ng-click='showFind()') Find Session
    button.btn.btn-danger.sessions(ng-click='showMySessions()') My Sessions
    button.btn.btn-danger.sessions(ng-click='showNew()') New Session

.row(ng-show='new')
  .col-xs-3
    form(role='form', novalidate, name='newForm')
      .form-group
        h4 Create New Session
      .form-group
        label(for='name') Session Name
        input.form-control#name(type='text', name='name', ng-model='newSession.name', autofocus, required)
      .form-group
        label(for='style') Session Style
        input.form-control#style(type='text', name='style', ng-model='newSession.style')
      .form-group
        label(for='loc') Location
        input.form-control#location(type='text', name='loc', ng-model='newSession.loc.city')
      .form-group
        label(for='date') Date
        input.form-control#date(type='date', name='date', ng-model='newSession.date')
      .form-group
        label(for='time') Time
        input.form-control#time(type='time', name='time', ng-model='newSession.time')
      button.btn.btn-danger(ng-show='newForm.$valid', ng-click='addNew()') Create
  .col-xs-9

.row(ng-show='show')
  .col-xs-8
    .panel
      .panel-body#show
        .row
          .col-xs-6
            h4 {{session.name}}
            h5 Style: {{session.style}}
            h5 {{session.date | date:fullDate}}
            h5 {{session.time | date: 'h:mma'}}
            h5 {{session.loc.city}}
          .col-xs-6
            h4 Hosted by:
            h5 session.hostId-name
        .row
          .col-xs-6
            h4 Attending:
            h5 ng-repeat members
  .col-xs-4

.row(ng-show='find')
  .col-xs-12
    h4 Find Sessions
    table.table.table-bordered
      thead
        tr
          th Name
          th Style
          th Date
          th Time
          th Location
      tbody#findSessions
        tr(ng-repeat= 'session in findSessions', ng-click= 'showSession(session)', data-id= '{{session._id}}')
          td {{session.name}}
          td {{session.style}}
          td {{session.date | date:fullDate}}
          td {{session.time | date:'h:mma'}}
          td {{session.loc.city}}

.row(ng-show='my')
  .col-xs-12
    h4 My Sessions
    table.table.table-bordered.sessions
      thead
        tr
          th Name
          th Style
          th Date
          th Time
          th Location
      tbody
        tr
          td session.name
          td session.style
          td session.date
          td session.time
          td session.loc.city

